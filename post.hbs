{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
    
<div class="main-content-wrap">
	<div class="container">
		<div class="row">
			<div class="col-md-8">
                {{#post}}
				<article class="post-wrap single">
                    {{#if featured}}
                    <div class="featured"></div>
                    {{/if}}
                    {{#if image}}
                    <div class="featured-media">
                        <img src="{{image}}" alt="{{{title}}}">
                    </div>
                    {{/if}}
                    <div class="post-content{{#unless image}} no-media{{/unless}}">
                        <h1 class="post-title">{{{title}}}</h1>
                        <div class="post-meta">
                            {{#author}}
                            <span class="author">
                                <i class="fa fa-user"></i>
                                <a href="{{url}}">{{name}}</a>
                            </span>
                            {{/author}}
                            <span class="date">
                                <i class="fa fa-calendar-o"></i>
                                {{date format="MMM DD, YYYY"}}
                            </span>
                            <span class="comment">
                                <i class="fa fa-comment-o"></i>
                                <a href="{{url}}#disqus_thread">0 Comments</a>
                            </span>
                        </div>
                        <div class="single-post-entry">
                            {{content}}
                        </div>
                        {{#if "tags"}}
                        <div class="tag-list">
                            <i class="fa fa-tag fa-fw"></i>
                            {{tags separator=", "}}
                        </div>
                        {{/if}}
                    </div>
                </article>
                {{> share-links}}
                {{> about-author}}
                {{> prev-next}}
                {{/post}}
                {{> comment}}
			</div>
			{{> sidebar}}
		</div>
	</div>
</div>