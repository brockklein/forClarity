<div class="cover-wrap {{#if @blog.cover}}" style="background-image: url({{@blog.cover}});"{{else}}no-image"{{/if}}>
	<div class="overlay">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h1>Welcome to {{@blog.title}}</h1>
	                {{#if @blog.description}}
					<div class="description">
						{{@blog.description}}
					</div>
	                {{/if}}
				</div>
			</div>
		</div>
	</div>
</div>