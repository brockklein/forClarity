{{#author}}
<div class="about-author">
	<div class="clearfix">
		{{#if image}}
			<a href="{{url}}"><img src="{{image}}" alt="Author image" class="avatar"></a>
			{{else}}
			<a href="{{url}}"><img src="{{asset "images/default-user-image.jpg"}}" alt="Author image" class="avatar"></a>
		{{/if}}
		<div class="details">
			<div class="author">
				<h3><a href="{{url}}">{{name}}</a></h3>
			</div>
			<div class="meta-info">
				{{#if location}}
				<span class="loaction"><i class="fa fa-home fa-fw"></i>{{location}}</span>
				{{/if}}
				{{#if website}}
				<span class="website"><i class="fa fa-globe fa-fw"></i><a href="{{website}}" targer="_BLANK">Website</a></span>
				{{/if}}
			</div>
		</div>
	</div>
	{{#if bio}}
	<div class="bio">
		{{bio}}
	</div>
	{{/if}}	
</div>
{{/author}}