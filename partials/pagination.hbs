<!-- start pagination -->
<div class="pagination-wrap">
	<div class="pagination clearfix" role="navigation">
		{{#if prev}}
		<a class="newer-posts" href="{{page_url prev}}"> <i class="fa fa-angle-left fa-fw"></i> Newer Posts</a>
		{{/if}}
        <span class="page-number">Page {{page}} of {{pages}}</span>
        {{#if next}}
        <a class="older-posts" href="{{page_url next}}">Older Posts <i class="fa fa-angle-right fa-fw"></i></a>
        {{/if}}
    </div>
</div>
<!-- end pagination -->